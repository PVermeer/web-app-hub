{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build release",
			"type": "cargo",
			"command": "build",
			"args": [
				"--release"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"label": "Build and run release app",
			"type": "shell",
			"command": "WAH_LOG=debug ./target/release/web-app-hub",
			"problemMatcher": [
				"$rustc",
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"dependsOn": [
				"Build release"
			]
		},
		{
			"label": "Build flatpak",
			"type": "shell",
			"command": "./flatpak/build.sh",
			"problemMatcher": [
				"$rustc",
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
		},
		{
			"label": "Build flatpak as new release",
			"type": "shell",
			"command": "./flatpak/build.sh",
			"problemMatcher": [
				"$rustc",
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": [
				"Generate release files"
			]
		},
		{
			"label": "Generate release files",
			"type": "cargo",
			"command": "run",
			"args": [
				"--bin=release",
				"--",
				"--dry-run"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"label": "Lint flatpak release",
			"type": "shell",
			"command": "flatpak run --command=flatpak-builder-lint org.flatpak.Builder --exceptions manifest ./flatpak/org.pvermeer.WebAppHub.yml",
			"problemMatcher": [
				"$rustc",
			],
			"group": {
				"kind": "test",
				"isDefault": false
			},
		},
		{
			"label": "Validate metainfo.xml",
			"type": "shell",
			"command": "appstreamcli validate --no-net ./assets/desktop/org.pvermeer.WebAppHub.metainfo.xml",
			"problemMatcher": [
				"$rustc",
			],
			"group": {
				"kind": "test",
				"isDefault": false
			},
		},
	]
}